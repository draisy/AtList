  <!--start: Container -->
  <div class="container">
    <!-- start: Page Title -->
    <div id="page-title">
      <h2><%= @list.title %></h2>
    </div>
    <!-- end: Page Title -->
    <!--start: Wrapper-->
    <div id="wrapper">
      <!--start: Row -->
      <div class="row-fluid">
      
        <div class="posts span8">

          <!-- start: Post -->
          <div class="post first last">

            <div class="post-img picture">

              <!--start: Container -->

                <div class="packery">
                  <% @list.favorites.each_with_index do |fav, index| %>
                      <% if index == 0 %>
                      <div class="grid-sizer"><%= image_tag(fav.favorite_image)%></div>
                      <% elsif index == 1 %>
                        <div class ="item big">
                          <%= image_tag(fav.favorite_image)%>
                        </div>
                      <% else %>
                        <div class="item"><%= image_tag(fav.favorite_image)%>
                        </div>
                      <% end %>
                    <% end %>
    
                </div>
            </div>
              

            <div class="info">
              <span class="post-date">
                <span class="month-year"><%= @list.created_at.strftime("%b %d %Y") %></span>
              </span>
            </div>
            <div class="post-content">
              <div class="post-title">
                <h2><%= @list.title %></h2>
              </div>
              <div class="post-meta">
                <span><i class="icon-user"></i><%= link_to @list.user.first_name, user_path(@list.user) %></span> 
                <span><i class="icon-bullhorn"></i>With <%= @list.get_list_influence %> influence score</span>
              </div>
            </div>
          </div>
          <!-- end: Post -->
          <hr>
          <i class="icon-trash-o"></i> List
          <%= link_to "Delete List", user_list_path(current_user, @list), :method => :delete %>
          <div class="clearfix"></div>
        </div>  
    
        <!-- start: Sidebar -->

        <div class="span4 sidebar hidden-phone">

        <!-- start: Popular Photos -->
        <div class="widget first">
          <div class="title"><h3>People</h3></div>

          <div class="flickr-widget">
            <script type="text/javascript" src="http://www.flickr.com/badge_code_v2.gne?count=9&display=latest&size=s&layout=x&source=user&user=29609591@N08"></script>
            <div class="clear"></div>
          </div>

        </div>
        <!-- end: Popular Photos -->

        <!-- start: Sidebar Menu -->
        <div class="widget">
          <h3>Favorites</h3>
          <ul class="links-list-alt">
            <% @list.favorites.each_with_index do |fav, i| %>
            <li><a href="#"><strong><%=fav.name %></strong><br/>
            <%=fav.description%>
            <%# if @list.user == current_user %>
  
         
            <i class="icon-pencil"></i>
              <%= link_to "x", list_favorite_path(@list, fav.id), :method => :delete %>
               <i class="icon-close"></i>
              <%= link_to "edit", edit_list_favorite_path(@list, fav.id) %></a></li>
            <%# else %>
              <%= link_to "UpPoke", poke_path(fav) %>
              <%= link_to "ReList", relist_path(fav) %></a></li>
            <%# end %>
            <% end %>
            <li><h1><%= link_to "Add a new favorite", "#addfavorite", class: "fancybox" %></h1>
               <div style="display:none;">
                 <div id="addfavorite">
                  <%= render 'shared/add_favorite' %>
                </div>
              </div>
            </li>
          </ul>
        </div>

        <!-- end: Sidebar Menu -->

        <!-- start: Tags -->
        <div class="widget last">
          <div class="tags">
            <a href="#">Tag1</a>
            <a href="#">Tag2</a>
            <a href="#">Tag3</a>
            <a href="#">Tag4</a>
            <a href="#">Tag5</a>
            <a href="#">Tag6</a>
            <a href="#">Tag7</a>
            <a href="#">Tag8</a>
            <a href="#">Tag9</a>
            <a href="#">Tag10</a>
            <a href="#">Tag11</a>
            <a href="#">Tag12</a>
          </div>
        </div>
        <!-- end: Tags -->

      </div>
      <!-- end: Sidebar -->
      
      </div>
      <!--start: Row -->
  
    </div>
    <!-- end: Wrapper  -->
  
  </div>
  <!--end: Container-->     




<script src="jquery-1.7.1.min.js"></script>
<script src="jquery.masonry.min.js"></script>
