<div class="container">
  <div class="row-fluid">
    <div class="add-thin-line">
    </div>
    <center><div class="profile-page-pic"><%= image_tag(@user.user_image, :class => "profile-pic") %></center>
    </div>
  </div>
</div>

<div class="container">
  <div class="row-fluid">
    <div class="user-stats">

      <div class="span2">
        <i class="fa fa-list"></i><br/>
        <h4 class="stats">Lists: <%= @lists.count %></h4>
      </div>

      <div class="span2">
        <i class="fa fa-heart"></i><br/>
        <h4 class="stats"><%= link_to "Favorites: #{@favorites_count}", "#favoritebox", class: "fancybox"%> </h4>
        <div style="display:none;">
          <div id="favoritebox">
            <%= render 'shared/favorite_box' %>
          </div>
        </div>
      </div>

      <div class="span2">
          <i class="fa fa-thumbs-up"></i><br/>

           <h4 class="stats"><%= link_to "Upvotes: #{@user.count_total_upvotes}", "#upvotebox", class: "fancybox"%></h4>
          <div style="display:none;">
            <div id="upvotebox">
              <%= render 'shared/upvote_box' %>
            </div>
          </div>
      </div>

      <div class="span2">
        <i class="fa fa-retweet"></i><br/>
        <h4 class="stats"><%= link_to "Relists: #{@user.count_total_relists}", "#relistbox", class: "fancybox"%></h4>
        <div style="display:none;">
          <div id="relistbox">
            <%= render 'shared/relist_box' %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<br>
<br>

  <!--start: Container -->
  <div class="container">
        
    <!--start: Wrapper-->
    <div id="wrapper">
    
      <!-- start: Wall -->
      <div id="wall" class="row-fluid">

        <% @lists.each do |list| %>
        <div class="span3 item">
          <div class="picture">
            <a class="image" href="/users/<%=list.user.id%>/lists/<%=list.id%>" title="Title">
              <%= image_tag(list.favorites.first.favorite_image, width:'200', height:'300', class: "product-img img-responsive")%></a>
            <div class="description">
              <p>
                "<%= list.title %>" from <%=list.user.first_name %> <br>
                <%= list.favorites.first.name %>: <%= list.favorites.first.description %>
              </p>
            </div>
            <div class="meta">
              <span><i class="icon-calendar"></i><%= list.created_at.strftime("%b %d %Y") %></span>
              <span><i class="icon-user"></i> <a href="#"><%=list.user.first_name %></a></span>
              <span><i class="icon-heart-empty"></i><%= list.get_list_influence %></span>
              <% if current_user == @user %>
                  <%= link_to "edit", edit_user_list_path(current_user, list) %>/
                  <%= link_to "delete", user_list_path(current_user, list), :method => :delete %>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>


      </div>
      <!-- end: Wall -->        
          
    </div>
    <!--end: Container-->
  
  </div>
  <!-- end: Wrapper  --> 