
<div class="favorite-box-container">
<h2><%= @user.first_name%>'s Favorites </h2>
<br>

<% @lists.each do |list| %>
  <div class="list-item-name">
    <h3><%= link_to "#{list.title}"%></h3>
  </div>
  <div class="list-item-favorites">
    <ul>
      <% list.favorites.each do |fav| %>
        <li>
            <%= image_tag(fav.favorite_image, width:'70', height: '70')%> &nbsp; <%= fav.name %> &nbsp; <span>
            <i class="icon-bullhorn"></i><%= fav.influence.score %></span>
        </li>
        <br>
      <% end %>
    </ul>
  </div>
<% end %>

</div>






